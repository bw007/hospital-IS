extends ../layouts/layout

block content
  .row.g-4
    .col-md-6
      .card.shadow-sm.border-0.h-100
        .card-body
          h5.card-title.mb-3.text-primary Bemorlar (Patients)
          p.card-text.text-muted Siz ro'yxatdan o'tgan bemorlar sonini va ularning ma'lumotlarini kuzatishingiz mumkin.
          a.btn.btn-primary.mt-3(href="/patients") Bemorlarni ko'rish
    .col-md-6
      .card.shadow-sm.border-0.h-100
        .card-body
          h5.card-title.mb-3.text-success Uchrashuvlar (Appointments)
          p.card-text.text-muted Rejalashtirilgan uchrashuvlarni va bemorlar bilan uchrashuv tarixini boshqarishingiz mumkin.
          a.btn.btn-success.mt-3(href="/appointments") Uchrashuvlarni ko'rish
  hr.my-5
  .text-center
    h2.text-primary Healthcare Tizimiga Xush Kelibsiz!
    p.lead.text-muted.mt-3 Bu tizim orqali bemorlarni ro'yxatga olish, uchrashuvlarni rejalashtirish va ma'lumotlarni boshqarish mumkin.
